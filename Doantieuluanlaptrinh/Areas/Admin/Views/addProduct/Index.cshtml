@model Doantieuluanlaptrinh.Models.SanPham

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<div class="content-wrapper">
    <!-- Main content -->
    <section class="content-header">
        <h1>
            Đăng bài sản phẩm mới
        </h1>
    </section>
    <section class="content">
        @using (Html.BeginForm("Index", "addProduct", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <!-- left column -->
                <div class="col-md-7">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Thông tin chính </h3>
                            <div class="pull-right box-tools">
                                <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip"
                                        title="Collapse">
                                    <i class="fa fa-minus"></i>
                                </button>

                            </div>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->
                        <form role="form">
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="nameContentBlog">Tên sản phẩm</label>
                                    @Html.TextBoxFor(m => m.tenSP, new { @class = "form-control", @placeholder = "Tên sản phẩm" })

                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="dateContentBlog">Ngày đăng</label>
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                @Html.TextBoxFor(m => m.ngayDang, "{0:dd/mm/yyyy}", new { @class = "form-control pull-right", @disabled = "" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="User">Tài khoản</label>
                                            @Html.TextBoxFor(m => m.taiKhoan, new { @class = "form-control", @disabled = "" })
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="User">Kích cở </label>
                                            @Html.TextBoxFor(m => m.kichCo, new { @class = "form-control", @placeholder = "Ấn số " })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="User">Mã loại sản phẩm</label>
                                            @Html.TextBoxFor(m => m.maLoai, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="User">Giá bán</label>
                                            @Html.TextBoxFor(m => m.giaBan, new { @class = "form-control", @placeholder = "Giá bán " })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <label for="User">Giảm giá </label>
                                            @Html.TextBoxFor(m => m.giamGia, new { @class = "form-control", @placeholder = "Giảm giá" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="dateContentBlog">Nhà sản xuất</label>
                                            <div class="input-group date">
                                                <div class="input-group-addon">
                                                    <i class="fa fa-calendar"></i>
                                                </div>
                                                @Html.TextBoxFor(m => m.nhaSanXuat, new { @class = "form-control pull-right" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="User">Giới tính</label>
                                            @Html.TextBoxFor(m => m.gioiTinh, new { @class = "form-control" } )
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label for="inContentBlog">Mô tả</label>
                                    @Html.TextAreaFor(m => m.moTa, new { @class = "form-control", @rows = "3", @placeholder = "Nội dung" })

                                </div>





                            </div>
                        </form>
                    </div>
                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <div class="col-md-5">

                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <h3 class="box-title">Hình Sản phẩm</h3>
                            <a href="#" class="pull-right btn-box-tool"><i class="fa fa-window-minimize"></i></a>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <img src="@ViewBag.linkHinh1" id="inputFileShow1" class="img-thumbnail" style="width:50%">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>File input</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" name="Hinhdaidien1" id="inputFile1">
                                                <label class="custom-file-label" for="inputFile1">Choose file</label>
                                            </div>
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary" type="button" id="inputFile1" disabled>
                                                    Upload
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- text input -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <img src="@ViewBag.linkHinh2" id="inputFileShow2" class="img-thumbnail" style="width:50%">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>File input</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" name="Hinhdaidien2" id="inputFile2">
                                                <label class="custom-file-label" for="inputFile2">Choose file</label>
                                            </div>
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary" type="button" id="inputFile2" disabled>
                                                    Upload
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <img src="@ViewBag.linkHinh3" id="inputFileShow3" class="img-thumbnail" style="width:50%">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>File input</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" name="Hinhdaidien3" id="inputFile3">
                                                <label class="custom-file-label" for="inputFile3">Choose file</label>
                                            </div>
                                            <div class="input-group-append">
                                                <button class="btn btn-outline-secondary" type="button" id="inputFile3" disabled>
                                                    Upload
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!--/.col (right) -->
                <div class="row">
                    <div class="col-md-12">

                        <!-- /.box -->

                        <div class="box box-info">
                            <div class="box-header">

                                <!-- tools box -->
                                <div class="pull-right box-tools">
                                    <button type="button" class="btn btn-default btn-sm" data-widget="collapse" data-toggle="tooltip"
                                            title="Collapse">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-default btn-sm" data-widget="remove" data-toggle="tooltip"
                                            title="Remove">
                                        <i class="fa fa-times"></i>
                                    </button>
                                </div>
                                <!-- /. tools -->
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body pad">

                                <label for="inContentBlog">Nội dung bài viết</label>
                                @Html.TextAreaFor(m => m.noiDung, new { @id = "editor1", @name = "editor1", @rows = "10", @cols = "80" })



                            </div>
                            <div class="box-body pad">

                                <label for="inContentBlog">Thông tin bổ sung</label>
                                @Html.TextAreaFor(m => m.thongTinBoSung, new { @id = "editor2", @name = "editor2", @rows = "10", @cols = "80" })



                            </div>

                        </div>
                    </div>
                    <!-- /.col-->
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>

        }
    </section>
    <!-- /.content -->
</div>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

<!-- CK Editor -->
<script src="~/Areas/Admin/Assets/bower_components/ckeditor/ckeditor.js"></script>
<!-- Bootstrap WYSIHTML5 -->

<script src="~/Areas/Admin/Assets/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
<script>

    $(document).ready(function () {

        // Replace the <textarea id="editor1"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace('editor1')
        CKEDITOR.replace('editor2')
        //bootstrap WYSIHTML5 - text editor

    })
</script>
<script>
    function showPreview(event) {
        if (event.target.files.length > 0) {
            var src = URL.createObjectURL(event.target.files[0]);
            var preview = document.getElementById("inputFileShow");
            preview.src = src;
            preview.style.display = "block";

</script>